    "version": "0.2.0",
    "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Main.html",
      "file": "${workspaceFolder}/main.html"
    },
    
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/wendyJS/main.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      },
    
      {
        "type": "node",
        "request": "launch",
        "name": "Main Server",
        "program": "${workspaceFolder}/whendyJS/main.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }