            "name": "countryId",
            "data": [
                ["", "- select your Country"],
                { "value": "1", "text": "ALL" },
                {
                    "sql": "select id as 'value', name as 'text' from countries WHERE subregion=? ORDER BY name",
                    "params": ["South America"]
                }
            ],
